    <div class="contrainer" id="one">
      <div class="header">
        <h2>Donation Form</h2>
      </div>

      <form id="form" class="form" method="POST" action="/add-form">
        <div class="form-controll">
          <lable>Full Name</lable>
          <input
            type="text"
            placeholder="Full name as shown in the natinal ID"
            id="fname"
            name="fname"
          />
          <i class="fas fa-check-circle"></i>
          <i class="fas fa-exclamation-circle"></i>
          <small>Error Message</small>
        </div>

        <div class="form-controll" id="two">
          <lable>Social Security Number</lable>
          <input
            type="number"
            placeholder="Enter a valid ID"
            id="SSIDx"
            name="SSIDx"
          />
          <i class="fas fa-check-circle"></i>
          <i class="fas fa-exclamation-circle"></i>
          <small>Error Message</small>
        </div>

        <div class="form-controll" id="two">
          <lable>Weight</lable>
          <input
            type="number"
            placeholder="Weight at the time of donation"
            id="weightx"
            name="weightx"
          />
          <i class="fas fa-check-circle"></i>
          <i class="fas fa-exclamation-circle"></i>
          <small>Error Message</small>
        </div>

        <div class="form-controll" id="two">
          <lable>Phone Number</lable>
          <input
            type="number"
            placeholder="Enter your phone number"
            id="pnumber"
            name="pnumber"
          />
          <i class="fas fa-check-circle"></i>
          <i class="fas fa-exclamation-circle"></i>
          <small>Error Message</small>
        </div>

        <div class="form-controll" id="two">
          <lable for="username">Email</lable>
          <input
            type="email"
            placeholder="abc@gmail.com"
            id="email"
            name="email"
          />
          <i class="fas fa-check-circle"></i>
          <i class="fas fa-exclamation-circle"></i>
          <small>Error Message</small>
        </div>
        <div class="form-controll">
          <label>Blood Type</label>
          <select class="Custom-select" name='bloodtype'>
            <option value="A">A</option>
            <option value="B">B</option>
            <option value="AB">AB</option>
            <option value="O">O</option>
          </select>
        </div>
        <div class="form-controll">
          <label>Donation Location</label>
          <select class="Custom-select" name='location'>
            <option value="Madinaty">Madinaty</option>
            <option value="Rehab">Rehab</option>
            <option value="Naser City">Naser City</option>
            <option value="Masr el-gedida">Masr el-gedida</option>
          </select>
        </div>
        <div class="form-controll">
          <label>Gender</label>
          <select class="Custom-select" name='Gender'>
            <option value="Male">Male</option>
            <option value="Female">femle</option>
          </select>
        </div>

        <button type="submit">Submit!</button>
      </form>
    </div>
