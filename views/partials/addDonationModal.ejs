<div id="id01" class="modal-MA">
    <span onclick="document.getElementById('id01').style.display='none'" class="close-Modal"
        title="Close Modal">&times;</span>
    <form class="modal-content" method="POST" action="/add-donation">
        <div class="container">
            <h1 id="modalTitle"></h1>

            <input type="text" id="idMA" name="id" style="display: none" />

            <label for="bloodType">Blood Type</label>
            <select id="bloodTypeMA" name="bloodType" required>
                <option value="A+">A+</option>
                <option value="A-">A-</option>
                <option value="B+">B+</option>
                <option value="B-">B-</option>
                <option value="AB+">AB+</option>
                <option value="AB-">AB-</option>
                <option value="O+">O+</option>
                <option value="O-">O-</option>
            </select>

            <label for="quantity">Quantity</label>
            <input type="text" id="quantityMA" name="quantity" placeholder="Quantity" required />

            <label for="donationdate">Donation Date</label>
            <input type="date" id="donationDateMA" name="donationdate" required />

            <label for="collector">Collector Name</label>
            <input type="text" id="collectorMA" name="collector" placeholder="Collector Name" required />

            <div class="clearfix">
                <input type="button" class="deletebtn"  onclick="document.getElementById('id01').style.display='none'" name="Cancel" value="Cancel" />
                <input type="submit" class="updatebtn" id="modalUpdateBtn" name="save" value="Save" />
            </div>
        </div>
    </form>
</div>